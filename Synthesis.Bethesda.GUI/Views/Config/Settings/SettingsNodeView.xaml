<local:SettingsNodeViewBase
    x:Class="Synthesis.Bethesda.GUI.Views.SettingsNodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Synthesis.Bethesda.GUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Synthesis.Bethesda.GUI"
    xmlns:xwpf="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ContentControl Content="{Binding}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type vm:BoolSettingsNodeVM}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        MinWidth="100"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Text="{Binding MemberName}" />
                    <CheckBox IsChecked="{Binding Value}" />
                </StackPanel>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:IntSettingsNodeVM}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        MinWidth="100"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Text="{Binding MemberName}" />
                    <xwpf:IntegerUpDown
                        MinWidth="65"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Value="{Binding Value}" />
                </StackPanel>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:DoubleSettingsNodeVM}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        MinWidth="100"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Text="{Binding MemberName}" />
                    <xwpf:DoubleUpDown
                        MinWidth="65"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Value="{Binding Value}" />
                </StackPanel>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:UnknownSettingsNodeVM}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding MemberName}" />
                </Grid>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</local:SettingsNodeViewBase>
