<local:DoubleSettingsNodeViewBase
    x:Class="Synthesis.Bethesda.GUI.Views.DoubleSettingsNodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Synthesis.Bethesda.GUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xwpf="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border Style="{StaticResource ReflectionSettingBorder}">
        <StackPanel Orientation="Horizontal">
            <TextBlock
                x:Name="SettingNameBlock"
                Margin="0,0,6,0"
                VerticalAlignment="Center"
                Style="{StaticResource ReflectionSettingName}" />
            <xwpf:DoubleUpDown
                x:Name="Spinner"
                MinWidth="65"
                VerticalAlignment="Center"
                Foreground="White"
                Style="{StaticResource ReflectionDoubleSpinner}" />
        </StackPanel>
    </Border>
</local:DoubleSettingsNodeViewBase>
