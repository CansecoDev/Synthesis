<UserControl
    x:Class="Synthesis.Bethesda.GUI.Views.VerticalSlicer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Synthesis.Bethesda.GUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="1"
    mc:Ignorable="d">
    <Rectangle Width="1">
        <Rectangle.Fill>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="0.05" Color="{StaticResource DarkSalmonTransparent}" />
                <GradientStop Offset="0.4" Color="{StaticResource DarkSalmon}" />
                <GradientStop Offset="0.6" Color="{StaticResource DarkSalmon}" />
                <GradientStop Offset="0.95" Color="{StaticResource DarkSalmonTransparent}" />
            </LinearGradientBrush>
        </Rectangle.Fill>
        <Rectangle.Effect>
            <DropShadowEffect
                BlurRadius="12"
                ShadowDepth="0"
                Color="Red" />
        </Rectangle.Effect>
    </Rectangle>
</UserControl>
