<local:CodeSnippetConfigViewBase
    x:Class="Mutagen.Bethesda.Synthesis.Views.CodeSnippetConfigView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mutagen.Bethesda.Synthesis.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
            Margin="0,4"
            FontSize="14"
            FontWeight="Bold"
            Text="Code" />
        <TextBox Grid.Row="1"
            Name="CodeBox"
            Margin="-8,0,0,10"
            Background="{StaticResource AbyssPurpleBrush}">
            <TextBox.Resources>
                <SolidColorBrush x:Key="TextBoxFocusBackgroundBrush" Color="{StaticResource AbyssPurple}" />
            </TextBox.Resources>
        </TextBox>
        <Grid Grid.Row="2"
            Name="BottomCompileBar"
            Height="25"
            Margin="-8,0,0,0" />
    </Grid>
</local:CodeSnippetConfigViewBase>
